<Window x:Class="Beatmap_Mirror_WPF.Windows.BeatmapDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BeatmapDetails" Height="401" Width="667">
    <Grid>
        <Image x:Name="BeatmapIcon" HorizontalAlignment="Right" Height="152" Margin="0,10,10,0" VerticalAlignment="Top" Width="200"/>
        <TextBlock x:Name="BeatmapTitle" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="26" FontWeight="Bold" FontStyle="Italic"/>
        <TextBlock HorizontalAlignment="Left" Margin="29,50,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="18"/>
        <TextBlock x:Name="BeatmapSize" HorizontalAlignment="Right" Margin="0,141,215,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>

    </Grid>
</Window>
